<Window x:Class="Project_tipa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_tipa"
        mc:Ignorable="d"
        Title="Password Changing" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Grid Margin="20">
        <DataGrid x:Name="Users"
                  Margin="10,10,10,10"
                  SelectionMode="Single"
                  IsReadOnly="False"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding lastname}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding firstname}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding username}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding role}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding password}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding FailedLoginAttempt}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding IsLocked}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding IsFirstLoggin}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding LastLoginDate}" />
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>